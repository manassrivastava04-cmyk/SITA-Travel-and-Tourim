  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    function toggleItin(i){
      const d = document.getElementById('itin-'+i);
      if(d){ d.open = !d.open }
    }

    function openBooking(pkg){
      document.querySelector('#packages [selected]')?.removeAttribute('selected');
      const sel = document.getElementById('package');
      for(const opt of sel.options){ if(opt.value===pkg) opt.selected=true }
      window.location.hash = '#booking';
      document.getElementById('name').focus();
    }

    function submitBooking(e){
      e.preventDefault();
      const form = e.target;
      const data = new FormData(form);
      const details = {
        name: data.get('name'),
        email: data.get('email'),
        package: data.get('package'),
        date: data.get('date'),
        extras: data.getAll('extras'),
        notes: data.get('notes')
      };
      const conf = document.getElementById('confirmation');
      conf.style.display='block';
      conf.innerHTML = `<strong>Thanks, ${escapeHtml(details.name)}!</strong> Your booking request for <em>${escapeHtml(details.package)}</em> on <strong>${escapeHtml(details.date)}</strong> has been received. We'll contact you at <strong>${escapeHtml(details.email)}</strong>.`;
      form.reset();
    }

    function escapeHtml(s){ return String(s).replace(/[&<>"']/g, function(c){ return ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[c]) }) }
  </script>
